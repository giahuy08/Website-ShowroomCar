@model IEnumerable<DoanWeb.Models.OrderProduct>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Order</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin/Chart/Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>


    <div class="card mb-4">

        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Thông tin Order
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID Order</th>
                            <th>ID Customer</th>
                            <th>Create Date</th>
                            <th>Decription</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.idOrder</td>
                                <td>@item.idCustomer</td>
                                <td>@item.createdDate</td>
                                <td>@item.Decription</td>
                                



                                <td>
                                    <a href="/Admin/OrderProducts/Edit/@item.idOrder"><i class="fa fa-edit" style="width:20px;height:20px;color:green"></i></a>
                                    <a href="/Admin/OrderProducts/Delete/@item.idOrder"><i class="fa fa-trash" style="width:20px;height:20px;color:orangered"></i></a>
                               

                                </td>

                            </tr>
                        }

                    </tbody>
                </table>

            </div>

        </div>
    </div>
</div>


