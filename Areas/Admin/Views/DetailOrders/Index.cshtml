@model IEnumerable<DoanWeb.Models.DetailOrder>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Detail Order</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin/Chart/Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>


    <div class="card mb-4">


        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Chi tiết đặt hàng
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID Order</th>
                            <th>Quantity</th>
                            <th>Sum</th>
                            <th>Decription</th>
                            <th>Name Product</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.idOrder</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price</td>
                                <td>@item.OrderProduct.Decription</td>

                                <td>@item.Product.nameProduct</td>
                               

                                <td>
                                   
                                    @Html.ActionLink("Edit", "Edit", new { id = item.idOrder, idpro = item.idProduct }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.idOrder, idpro = item.idProduct })
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>

                @*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))*@
            </div>

        </div>
    </div>
</div>




