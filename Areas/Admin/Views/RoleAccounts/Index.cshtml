@model IEnumerable<DoanWeb.Models.RoleAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid">

    <h1 class="mt-4">Role</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin/Chart/Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>

    <div class="card mb-4">
        <p>
            <a href="/Admin/RoleAccounts/Create" class="btn btn-success">Create New</a>
        </p>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Role</th>
                            <th>Action</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.idroleAccount</td>
                                <td>@item.roleName</td>

                                @*<td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.idroleAccount }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.idroleAccount }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.idroleAccount })

                                </td>*@
                                <td>

                                    <a href="/Admin/RoleAccounts/Edit/@item.idroleAccount"><i class="fa fa-edit" style="width:20px;height:20px;color:green"></i></a>
                                    <a href="/Admin/RoleAccounts/Details/@item.idroleAccount"><i class="fa fa-table" style="width:20px;height:20px;color:red"></i></a>
                                    <a href="/Admin/RoleAccounts/Delete/@item.idroleAccount"><i class="fa fa-trash" style="width:20px;height:20px;color:orangered"></i></a>


                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>