@model IList<DoanWeb.Models.ThongKe>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}





<div class="container-fluid">
    <h1 class="mt-4">Export</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin/Chart/Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>


    <div class="card mb-4">

        @using (Html.BeginForm("ExportToExcel", "Export", FormMethod.Post))
        {

            <br />
            <br />
            <h2>
                Export Data To Excel
            </h2>
            <table style="background-color: white; width: 100%;">
                <tr>
                    <th style="border: 1px solid black; text-align: left; width: 20%; padding-left: 20px;">
                        Hang
                    </th>
                    <th style="border: 2px solid black; text-align: center; width: 20%">
                        Số lượng
                    </th>
                    <th style="border: 2px solid black; text-align: center; width: 20%">
                        Tỗng tiền thu được
                    </th>

                </tr>
                @foreach (var itm in Model)
                {

                    <tr>
                        <td style="padding-left: 20px;">
                            @Html.DisplayFor(m => itm.Hang)
                        </td>
                        <td style="padding-left: 20px;">
                            @Html.DisplayFor(m => itm.Tongxe)
                        </td>
                        <td style="padding-left: 20px;">
                            @Html.DisplayFor(m => itm.DoanhThu)
                        </td>

                    </tr>

                }

                <tr>
                    <td colspan="4">
                        <br />
                        <br />
                        <input type="submit" value="Export to Excel" class="button" />

                    </td>
                </tr>
            </table>
        }
        

    </div>
</div>





















