@using DoanWeb.Models;
@model DoanWeb.Models.Compare
@*@model IEnumerable<Compare>*@
@{
    ViewBag.Title = "ListProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Product lspd1 = ViewBag.pro1 as Product;
    IEnumerable<Product> lspd2 = ViewBag.pro2 as IEnumerable<Product>;

}


<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/Themes/Home/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Cars <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Choose Your Car</h1>

            </div>
        </div>
    </div>
</section>
<br />

 <div class="btn btn-success"><a href="/Search" style="color:black">Thêm so sánh</a></div>
<br />
<br />

 <table class="table" >
     <tbody>

         <tr>
             <th>Tên Xe</th>
             @foreach (var item in Model.Pros)
             {
                 <td>@item.nameProduct <span><a href="/Products/DeleteCompare/@item.idProduct"><i class="icon-trash" style="width:100px;height:100px;"></i></a></span></td>
                 @*<td><a href="/Products/DeleteCompare/@item.idProduct" class="ion-ios-trash" style="width:50px;height:55px"></a></td>*@


             }
         </tr>
         <tr>
             <th>Hình ảnh</th>
             @foreach (var item in Model.Pros)
             {

                 <td> <img src="~/@item.urlImageProduct" style="width:300px; height:200px;" /></td>
           

             }
         </tr>
         <tr>
             <th>Giá</th>
             @foreach (var item in Model.Pros)
             {
                 <td>@item.priceProduct <span>VND</span></td>
         

             }

         </tr>
         <tr>
             <th>Kiểu dáng</th>
             @foreach (var item in Model.Pros)
             {
                 <td>@item.modelProduct</td>
            

             }

         </tr>

         <tr>
             <th>Năm sản xuất</th>
             @foreach (var item in Model.Pros)
             {
                 <td>@item.timeProduction</td>
             

             }

         </tr>
         <tr>
             <th>Nguồn gốc</th>
             @foreach (var item in Model.Pros)
             {
                 <td>@item.originProduct</td>
                

             }

         </tr>
         <tr>
             <th>Màu sắc</th>
             @foreach (var item in Model.Pros)
             {
                 <td>@item.color</td>
              

             }

         </tr>
         <tr>
             <th>Số chỗ</th>
             @foreach (var item in Model.Pros)
             {
                 <td>@item.seat</td>
         

             }

         </tr>
         <tr>
             <th>Nhiên liệu</th>
             @foreach (var item in Model.Pros)
             {
                 <td>@item.fuel</td>
              

             }

         </tr>

     </tbody>
 </table>